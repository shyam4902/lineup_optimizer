{
    "version": "0.2.0",
    "configurations": [

      {
        "name": "Python: Flask",
        "type": "debugpy",
        "request": "launch",
        "module": "flask",
        "env": {
          "FLASK_APP": "app.py",  // Update with your main Python file name
          "FLASK_ENV": "development"
        },
        "args": ["run", "--no-debugger", "--no-reload"],
        "jinja": true
      }
    ]
  }
  